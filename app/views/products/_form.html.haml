= form_for @product do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title, autofocus: true

  .field
    = f.label :description
    %br
    = f.text_area :description

  .field
    = f.label :categories
    %br
    = f.collection_check_boxes :category_ids, @categories, :id, :name

  .actions
    = f.submit "Create product"
