= form_for @product do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title, autofocus: true

  %P
    .field
      = f.label :description
      %br
      = f.text_area :description
  %p
    .field
      = f.label :photo
      %br
      = f.file_field :photo

  %p
    .field
      = f.label :categories
      %br
      = f.collection_check_boxes :category_ids, @categories, :id, :name
  %p
    .actions
      = f.submit "Create product"
