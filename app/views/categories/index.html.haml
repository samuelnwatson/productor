#content
  .left.column
    %p
      %p= link_to 'All products', products_path
    - if user_signed_in?
      %p= link_to 'New product', new_product_path
      %p= link_to 'New category', new_category_path

    %h3 categories
    - @categories.order("updated_at DESC").each do |category|
      %p= link_to "#{category.name}", category_path(category)
